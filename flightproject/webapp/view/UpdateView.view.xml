<mvc:View controllerName="app.flightproject.controller.UpdateView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Page id="idUpdate" title="{i18n>titleUpdate}">
        <content/>
         <f:SimpleForm editable="true">
            <Label text="Carrid" ></Label>
        <Input value="{CustomerModel>Carrid}" id="CarridInput"></Input>
       
        <Label text="Connid"></Label>
        <Input value="{CustomerModel>Connid}" id="ConnidInput"></Input>
       
        <Label text="Fldate"></Label>
        <Input value="{CustomerModel>Fldate}" id="FldateInput" ></Input>
       
        <Label text="Bookid" required="true"></Label>
        <Input value="{CustomerModel>Bookid}" editable="false" id="BookidInput"></Input>
 
        <Label text="OrderDate"></Label>
        <Input value="{CustomerModel>OrderDate}" id="OrderDateInput" ></Input>

        <Label text="Passname"></Label>
        <Input value="{CustomerModel>Passname}" id="PassnameInput"></Input>

        <Label text="Countryto"></Label>
        <Input value="{CustomerModel>Countryto}" id="CountrytoInput"></Input>

        <Label text="Countryfr"></Label>
        <Input value="{CustomerModel>Countryfr}" id="CountryfrInput"></Input>

        <Label text="Price"></Label>
        <Input value="{CustomerModel>Price}" id="PriceInput"></Input>

        <Label text="Currency"></Label>
        <Input value="{CustomerModel>Currency}" id="CurrencyInput"></Input>
        
        <Button text="{i18n>Update}" press="onUpdate" width="80px"></Button>
 
     
    </f:SimpleForm>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>